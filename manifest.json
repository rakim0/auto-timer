{
    "manifest_version": 2,
    "name": "X.com 10 Minute Timer",
    "version": "1.0.0",
    "description": "Automatically starts a 10-minute timer when opening x.com tabs",
    "permissions": ["tabs", "alarms", "storage", "notifications"],
    "background": {
        "scripts": ["src/constants.js", "src/background/background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "src/status/status.html",
        "default_icon": "assets/icon.svg",
        "default_title": "X.com Timer Status"
    },
    "icons": {
        "48": "assets/icon.svg",
        "96": "assets/icon.svg"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "xcom-timer@example.com",
            "strict_min_version": "57.0"
        }
    }
}
